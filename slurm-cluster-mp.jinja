# [START cluster_yaml]
imports:
- path:       slurm.jinja

resources:
- name:       slurm-cluster
  type:       slurm.jinja
  properties:
    cluster_name            : datta-multi
    zone                    : us-east1-b
    region                  : us-east1
    cidr                    : 10.10.0.0/16

    controller_machine_type : n1-standard-8
    # compute_machine_type    : n1-highmem-16
    login_machine_type      : n1-standard-2
    login_node_count        : 1

    # Optional compute configuration fields
    controller_disk_type       : pd-standard
    controller_disk_size_gb    : 2000
    login_disk_type            : pd-standard
    login_disk_size_gb         : 10
    nfs_apps_dir               : /apps
    nfs_home_dir               : /home

    # Optional timer fields
    #suspend_time               : 300
    external_compute_ips    : True
    default_account         : default
    slurm_version           : 18.08-latest
    default_users           : dattalab, jmarkow, ralph, wgillis

    #slurm_version           : 18.08-latest
    #default_account         : default

    partitions :
    {% for partition in partitions %}
    {% for zone in partition.zones %}
    {% for preemptible in partition.preemptible %}
    {% if preemptible %}
    - name           : {{partition.name}}-{{zone.name}}-preemptible
    {% else %}
    - name           : {{partition.name}}-{{zone.name}}
    {% endif %}
      machine_type   : {{partition.machine_type}}
      max_node_count : {{partition.max_node_count}}
      zone           : {{zone.zone}}
      preemptible_bursting       : {{preemptible}}
      {% if partition.gpu|length %}
      gpu_type       : {{partition.gpu}}
      gpu_count      : {{partition.gpu_count}}
      {% endif %}
    {% endfor %}
    {% endfor %}
    {% endfor %}
#  [END cluster_yaml]
